{
  "name": "cf-nexus",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "wrangler pages dev dist",
    "astro": "astro",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:local": "playwright test",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx,.astro",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 execute nexus-db --local --file=migrations/0001_initial_schema.sql",
    "db:migrate:prod": "wrangler d1 execute nexus-db --file=migrations/0001_initial_schema.sql",
    "keys:generate": "node scripts/generate-jwt-keys.js",
    "bun:dev": "bun run dev",
    "bun:test": "bun test",
    "bun:build": "bun run build"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^11.0.0",
    "@passwordless-id/webauthn": "^1.1.2",
    "astro": "^4.10.3",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@cloudflare/workers-types": "^4.20231127.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "typescript": "^5.7.0",
    "vitest": "^1.0.0",
    "wrangler": "^4.0.0"
  }
}
