---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login">
  <div class="max-w-md mx-auto">
    <div class="bg-white p-8 rounded-lg shadow-sm border border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900 text-center mb-8">
        Sign In
      </h1>

      <form id="login-form" class="space-y-6">
        <div>
          <label
            for="username"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Username
          </label>
          <input
            type="text"
            id="username"
            name="username"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="Enter your username"
          />
        </div>

        <div class="space-y-3">
          <button
            type="submit"
            formaction="/webauthn/auth/begin"
            id="signin-button"
            class="w-full px-4 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Sign In with Passkey
          </button>

          <button
            type="submit"
            formaction="/webauthn/register/begin"
            id="register-button"
            class="w-full px-4 py-3 bg-gray-100 text-gray-700 font-semibold rounded-lg hover:bg-gray-200 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Create Passkey
          </button>
        </div>
      </form>

      <div id="error-message" class="mt-6 p-4 bg-red-50 text-red-700 rounded-lg hidden">
      </div>

      <div id="success-message" class="mt-6 p-4 bg-green-50 text-green-700 rounded-lg hidden">
      </div>

      <div id="loading" class="mt-6 text-center hidden">
        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600">
        </div>
        <p class="mt-2 text-gray-600">Waiting for passkey...</p>
      </div>
    </div>

    <div class="mt-6 text-center text-sm text-gray-600">
      <p>
        Nexus uses WebAuthn passkeys for secure, passwordless authentication.
      </p>
    </div>
  </div>

  <script>
    document.getElementById('login-form').addEventListener('submit', async (e) => {
      e.preventDefault();

      const username = document.getElementById('username').value;
      const action = e.submitter.formAction;
      const isRegister = action.includes('register');

      showError('');
      showSuccess('');
      showLoading(true);

      try {
        const response = await fetch(action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ username }),
        });

        if (!response.ok) {
          throw new Error('Failed to initiate WebAuthn');
        }

        const options = await response.json();

        if (isRegister) {
          const credential = await navigator.credentials.create(options);

          const completeResponse = await fetch('/webauthn/register/complete', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              username,
              credential,
            }),
          });

          if (!completeResponse.ok) {
            throw new Error('Failed to complete registration');
          }

          showSuccess('Passkey registered successfully! You can now sign in.');
        } else {
          const assertion = await navigator.credentials.get(options);

          const completeResponse = await fetch('/webauthn/auth/complete', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              username,
              assertion,
            }),
          });

          if (!completeResponse.ok) {
            throw new Error('Failed to complete authentication');
          }

          const result = await completeResponse.json();
          showSuccess('Authentication successful! Redirecting...');

          setTimeout(() => {
            window.location.href = result.redirect || '/dashboard';
          }, 1000);
        }
      } catch (error) {
        showError(error.message || 'Authentication failed. Please try again.');
      } finally {
        showLoading(false);
      }
    });

    function showError(message) {
      const errorDiv = document.getElementById('error-message');
      if (message) {
        errorDiv.textContent = message;
        errorDiv.classList.remove('hidden');
      } else {
        errorDiv.classList.add('hidden');
      }
    }

    function showSuccess(message) {
      const successDiv = document.getElementById('success-message');
      if (message) {
        successDiv.textContent = message;
        successDiv.classList.remove('hidden');
      } else {
        successDiv.classList.add('hidden');
      }
    }

    function showLoading(loading) {
      const loadingDiv = document.getElementById('loading');
      const signinButton = document.getElementById('signin-button');
      const registerButton = document.getElementById('register-button');

      if (loading) {
        loadingDiv.classList.remove('hidden');
        signinButton.disabled = true;
        registerButton.disabled = true;
      } else {
        loadingDiv.classList.add('hidden');
        signinButton.disabled = false;
        registerButton.disabled = false;
      }
    }
  </script>
</Layout>
